# Adding reverse search between emacs and zathura
set synctex true
set synctex-editor-command "emacsclient +%{line} %{input}"


set selection-clipboard clipboard


set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
#set recolor-darkcolor \#fffaf4
#set recolor-lightcolor \#0e1019
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# -*- mode: conf-space -*-

# Light theme made in the spirit of 'alect-light':
# <https://github.com/alezost/alect-themes>.

set inputbar-bg "#FFFFFF"
set inputbar-fg "#010101"
set statusbar-fg "#FAB382"
set statusbar-bg "#232344"
